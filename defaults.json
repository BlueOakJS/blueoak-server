{
  "logger": {
    "levels": { "silly": 0, "debug": 1, "verbose": 2, "info": 3, "warn": 4, "error": 5 },
    "colors": { "silly": "magenta", "debug": "cyan", "verbose": "blue", "info": "green", "warn": "yellow", "error": "red" },
    "transports": [
      {
        "package": "winston",
        "field": "transports.Console",
        "options": {
          "level": "debug",
          "colorize": true
        }
      }
    ],
    "showLocation": true
  },

  "crashDump": {
    "enable": false,
    "length": 1000,
    "type": "console"
  },

  "cluster": {
    "maxWorkers": 1
  },

  "session": {
    "type": "cookie"
  },

  "express": {
    "port": 3000
  },

  "monitor": {
    "port": 8125 //statsd port
  },

  "express-monitor": {
    "prefix": "express"
  },

  "swagger": {
    "context": "/swagger",
    "serve": true,
    "useLocalhost": true
  },

  "node": {
    "version": {
      "min": "^4.3.0 || ^5.6.0",
      "recommended": "4.3.0" //Feb '16 security update
    }
  }
}
