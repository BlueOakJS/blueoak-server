//Default config for my app
{
  "express": {
    "port": "3000",
    "middleware": ["cors", "body-parser", "bos-authentication", "custom-auth"],
    "middleware$": ["errors"]
  },
  
  "cors": {
    "origin": "*"
  },

  "body-parser": {
    "json": {}
  },

  "cluster": {
    "maxWorkers": 1
  },

  "swagger": {
    "refCompiler": {
      "petstore": {
        "baseSpecFile": "petstore.json",
        "refDirs": [
          "v1-assets"
        ]
      },
      "api-v1": {
        "baseSpecFile": "api-v1.yaml",
        "refDirs": [
          "public"
        ]
      }
    }
  }

}