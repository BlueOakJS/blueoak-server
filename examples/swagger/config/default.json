//Default config for my app
{
  "express": {
    "port": "3000",
    "middleware": ["cors", "body-parser"],
    "middleware$": ["errors"]
  },
  "cors": {
    "origin": "*"
  },

  "body-parser": {
    "json": {}
  },

  "cluster": {
    "maxWorkers": 1
  },

  "refCompiler": {
    "petstore": {
      "baseSpecFile": "petstore.json",
      "refDirs": [
        "v1-assets"
      ]
    },
    "api-v1": {
      "baseSpecFile": "api-v1.yaml",
      "refDirs": [
        "public"
      ]
    }
  }

}